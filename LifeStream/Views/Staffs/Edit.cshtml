@model LifeStream.Models.Staff

@{
    ViewData["Title"] = "Edit Staff";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <!-- Header Section -->
                <div class="card-header bg-gradient-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="bi bi-pencil-square me-2"></i> Edit Staff Profile
                        </h3>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm rounded-pill">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>

                <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                        <input type="hidden" asp-for="StaffId" />

                        <!-- Basic Info Row -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="row g-3">
                                    <!-- Name -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="StaffName" class="form-label fw-bold mb-2">
                                                <i class="bi bi-person-badge me-2 text-primary"></i>Full Name
                                            </label>
                                            <input asp-for="StaffName" class="form-control" required />
                                            <span asp-validation-for="StaffName" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Designation -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Designation" class="form-label fw-bold mb-2">
                                                <i class="bi bi-briefcase me-2 text-primary"></i>Designation
                                            </label>
                                            <input asp-for="Designation" class="form-control" required />
                                            <span asp-validation-for="Designation" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email" class="form-label fw-bold mb-2">
                                                <i class="bi bi-envelope me-2 text-primary"></i>Email Address
                                            </label>
                                            <input asp-for="Email" type="email" class="form-control" required />
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Phone -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber" class="form-label fw-bold mb-2">
                                                <i class="bi bi-telephone me-2 text-primary"></i>Phone Number
                                            </label>
                                            <input asp-for="PhoneNumber" class="form-control" required />
                                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Information Section -->
                        <div class="row g-3">
                            <!-- Date of Joining -->
                            <div class="col-md-6">
                                <div class="form-group mb-0">
                                    <label asp-for="DOJ" class="form-label fw-bold mb-2">
                                        <i class="bi bi-calendar-date me-2 text-primary"></i>Date of Joining
                                    </label>
                                    <input asp-for="DOJ" type="date" class="form-control" required />
                                    <span asp-validation-for="DOJ" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Centered Footer Buttons -->
                    <div class="card-footer bg-light py-3">
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary px-4 rounded-pill me-2">
                                <i class="bi bi-check-circle me-1"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }

        .card {
            border: none;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group.mb-0 {
                margin-bottom: 0 !important;
            }

        .form-label {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            color: #495057;
        }

        .form-control, .form-select {
            padding: 0.5rem 0.75rem;
            border-radius: 0.375rem;
            border: 1px solid #ced4da;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-control:focus, .form-select:focus {
                border-color: #86b7fe;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            }

        .btn-group {
            box-shadow: none;
        }

        .btn-outline-primary {
            border-color: #667eea;
            color: #667eea;
        }

            .btn-outline-primary:hover,
            .btn-outline-primary:active,
            .btn-outline-primary:focus {
                background-color: #667eea;
                color: white;
            }

        .text-danger.small {
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .btn-group {
                width: 100% !important;
            }

                .btn-group .btn {
                    flex: 1;
                }

            .card-footer .d-flex {
                flex-direction: column;
                gap: 0.5rem;
            }

            .card-footer .btn {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Form validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}