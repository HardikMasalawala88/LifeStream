@model LifeStream.Models.Staff

@{
    ViewData["Title"] = "Create Staff";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title"><i class="bi bi-person-plus"></i> Insert Staff</h3>
                </div>

                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <!-- Left Section -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="@Model.StaffName" class="form-label">Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                        <input asp-for="@Model.StaffName" class="form-control" placeholder="Enter Name" />
                                    </div>
                                    <span asp-validation-for="@Model.StaffName" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="@Model.Designation" class="form-label">Designation</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-briefcase-fill"></i></span>
                                        <input asp-for="@Model.Designation" class="form-control" placeholder="Enter Designation" />
                                    </div>
                                    <span asp-validation-for="@Model.Designation" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="@Model.Email" class="form-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input asp-for="@Model.Email" class="form-control" placeholder="Enter Email" />
                                    </div>
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Section -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                                    </div>
                                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="@Model.DOJ" class="form-label">Date of Joining</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-calendar-check"></i></span>
                                        <input asp-for="@Model.DOJ" type="date" class="form-control" />
                                    </div>
                                    <span asp-validation-for="@Model.DOJ" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer text-center">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="bi bi-person-plus-fill"></i> Create Staff
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}