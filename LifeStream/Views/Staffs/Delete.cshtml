@model LifeStream.Models.Staff

@{
    ViewData["Title"] = "Delete Staff";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3 mt-4">
            <div class="card-header bg-danger text-white text-center py-4 rounded-top">
                <h2><i class="fa-solid fa-trash"></i> Confirm Deletion</h2>
            </div>
            <div class="card-body p-4">
                <h4 class="text-center">Are you sure you want to delete this staff member?</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Full Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.StaffName)</dd>
                    
                    <dt class="col-sm-4 fw-bold">Designation</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Designation)</dd>
                    
                    <dt class="col-sm-4 fw-bold">Phone Number</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                    
                    <dt class="col-sm-4 fw-bold">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    
                    <dt class="col-sm-4 fw-bold">Date of Joining</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DOJ)</dd>
                </dl>
                
                <form asp-action="Delete" method="post" class="text-center mt-3">
                    <input type="hidden" asp-for="StaffId" />
                    <button type="submit" class="btn btn-danger px-4"><i class="fa-solid fa-trash"></i> Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4"><i class="fa-solid fa-arrow-left"></i> Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
