@model LifeStream.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3 mt-4">
            <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                <h2><i class="bi bi-trash3-fill"></i> Delete Appointment</h2>
            </div>
            <div class="card-body p-4 text-center">
                <h4 class="text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this appointment?</h4>
                <hr />

                <dl class="row justify-content-center">
                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-person-fill"></i> Patient Name:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Patient.PatientName)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-person-badge-fill"></i> Doctor Name:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Doctor.Name)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-calendar-check"></i> Appointment Date:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.AppointmentDate)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-info-circle-fill"></i> Status:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-file-text-fill"></i> Description:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Description)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="AppointmentId" />

                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
