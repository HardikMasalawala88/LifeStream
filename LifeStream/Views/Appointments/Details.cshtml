@model LifeStream.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="appointment-details-card">
                <!-- Header Section -->
                <div class="appointment-header">
                    <div class="appointment-info">
                        <h1 class="appointment-title">Appointment Details</h1>
                        <div class="appointment-meta">
                            <span class="date-highlight">
                                <i class="bi bi-calendar2-date"></i> @Model.AppointmentDate.ToString("dddd, MMMM dd, yyyy")
                            </span>
                            <span class="time-badge">
                                <i class="bi bi-clock"></i> @Model.AppointmentDate.ToString("h:mm tt")
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Content Section -->
                <div class="appointment-content">
                    <div class="row g-4">
                        <!-- Patient Information -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title">
                                    <i class="bi bi-person-heart text-primary me-2"></i> Patient Information
                                </h3>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-person"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Patient Name</label>
                                            <p>@Model.Patient.PatientName</p>
                                        </div>
                                    </div>
                                    <div class="info-item status-item @Model.Status.ToLower()">
                                        <div class="info-icon">
                                            <i class="bi bi-calendar-check"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Appointment Status</label>
                                            <p>@Model.Status</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Doctor Information -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title">
                                    <i class="bi bi-heart-pulse text-primary me-2"></i> Doctor Information
                                </h3>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-person-badge"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Doctor Name</label>
                                            <p>@Model.Doctor.Name</p>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-award"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Specialization</label>
                                            <p>@Model.Doctor.Specialization</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="appointment-actions">
                    @if (!User.IsInRole(UserRoleInfo.Admin)){
                    <a asp-action="Edit" asp-route-id="@Model?.AppointmentId" class="btn btn-primary btn-edit">
                        <i class="bi bi-pencil-square me-2"></i> Edit Appointment
                    </a>
                    }
                    <a asp-action="Index" class="btn btn-outline-primary btn-back">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .appointment-details-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .appointment-header {
        background: linear-gradient(135deg, #4a6cf7 0%, #2541b2 100%);
        padding: 2.5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .appointment-info {
        flex: 1;
        min-width: 250px;
    }

    .appointment-title {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .appointment-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
    }

    .date-highlight {
        background: white;
        color: #2541b2;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        font-size: 0.95rem;
    }

        .date-highlight i {
            margin-right: 0.5rem;
            color: #2541b2;
        }

    .time-badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        font-size: 0.95rem;
        backdrop-filter: blur(5px);
    }

        .time-badge i {
            margin-right: 0.5rem;
            color: #ffc107;
        }

    .appointment-content {
        padding: 2.5rem;
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.4rem;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 1.25rem;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(74, 108, 247, 0.1);
        }

    .status-item.pending {
        border-left: 4px solid #ffc107;
    }

    .status-item.confirmed {
        border-left: 4px solid #28a745;
    }

    .status-item.cancelled {
        border-left: 4px solid #dc3545;
    }

    .status-item.completed {
        border-left: 4px solid #17a2b8;
    }

    .info-icon {
        width: 40px;
        height: 40px;
        background: rgba(74, 108, 247, 0.1);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.25rem;
        flex-shrink: 0;
    }

        .info-icon i {
            color: #4a6cf7;
            font-size: 1.25rem;
        }

    .status-item .info-icon i {
        color: inherit;
    }

    .status-item.pending .info-icon {
        background: rgba(255, 193, 7, 0.1);
    }

    .status-item.confirmed .info-icon {
        background: rgba(40, 167, 69, 0.1);
    }

    .status-item.cancelled .info-icon {
        background: rgba(220, 53, 69, 0.1);
    }

    .status-item.completed .info-icon {
        background: rgba(23, 162, 184, 0.1);
    }

    .info-content {
        flex: 1;
    }

        .info-content label {
            display: block;
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 500;
        }

        .info-content p {
            margin: 0;
            font-size: 1.05rem;
            font-weight: 500;
            color: #2c3e50;
        }

    .status-item p {
        font-weight: 600;
    }

    .status-item.pending p {
        color: #ffc107;
    }

    .status-item.confirmed p {
        color: #28a745;
    }

    .status-item.cancelled p {
        color: #dc3545;
    }

    .status-item.completed p {
        color: #17a2b8;
    }

    .appointment-actions {
        padding: 1.5rem 2.5rem;
        border-top: 1px solid #f0f0f0;
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        background: #f8f9fa;
    }

    .btn-edit, .btn-back {
        padding: 0.75rem 1.75rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #4a6cf7;
        color: white;
        border: none;
    }

        .btn-edit:hover {
            background: #3a5bd9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(74, 108, 247, 0.3);
        }

    .btn-back {
        background: white;
        color: #4a6cf7;
        border: 1px solid #4a6cf7;
    }

        .btn-back:hover {
            background: #f8f9ff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(74, 108, 247, 0.2);
        }

    @@media (max-width: 768px) {
        .appointment-header {
            flex-direction: column;
            text-align: center;
            padding: 2rem 1.5rem;
        }

        .appointment-meta {
            justify-content: center;
        }

        .appointment-content {
            padding: 1.5rem;
        }

        .appointment-actions {
            justify-content: center;
            flex-wrap: wrap;
            padding: 1.5rem;
        }

        .btn-edit, .btn-back {
            width: 100%;
            justify-content: center;
        }
    }
</style>