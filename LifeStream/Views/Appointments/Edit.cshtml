@model LifeStream.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3 mt-4">
            <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                <h2><i class="fa-solid fa-calendar-check"></i> Edit Appointment</h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AppointmentId" />

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="PatientId" class="form-label fw-bold">Patient</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientList" required>
                                    <option value="">-- Select Patient --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DoctorId" class="form-label fw-bold">Doctor</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-stethoscope"></i></span>
                                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorList" required>
                                    <option value="">-- Select Doctor --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="AppointmentDate" class="form-label fw-bold">Date & Time</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                <input asp-for="AppointmentDate" type="datetime-local" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label fw-bold">Status</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-info-circle"></i></span>
                                <select asp-for="Status" class="form-control" required>
                                    <option value="Scheduled">Scheduled</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-chat-left-dots"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-success px-4"><i class="fa-solid fa-save"></i> Save Changes</button>
                        <a asp-action="Index" class="btn btn-secondary px-4"><i class="fa-solid fa-arrow-left"></i> Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
