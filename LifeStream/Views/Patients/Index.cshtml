@model IEnumerable<LifeStream.Models.Patient>

@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12 mt-4 px-5">
        <div class="card px-3 pt-auto">
<h1>Patients</h1>
<hr/>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i> Create New Patient</a>
</p>




<table class="table table-hover defaul-primary dynamic-table">
    <thead class="thead-dark">       
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().PatientName)</th>
            <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
            <th>@Html.DisplayNameFor(model => model.First().Age)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil-square"></i> 
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info">
                                            <i class="bi bi-card-list"></i> 
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash-fill"></i> 
                                        </a>
                                    </td>

            </tr>
        }
    </tbody>
</table>
</div>
    </div>
    </div>
    
