    @model IEnumerable<LifeStream.Models.Patient>

    @{
        ViewData["Title"] = "Patients";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <div class="container-fluid pt-4 px-4">
    <div class="container-fluid pt-2 px-3">
        <!-- Reduced padding -->
        <div class="bg-primary text-white rounded shadow p-3">
            <!-- Smaller padding -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <!-- Adjusted margin -->
                <h4 class="mb-0"><i class="bi bi-people-fill"></i> Patient Directory</h4> <!-- Smaller heading -->
                <a asp-action="Create" class="btn btn-sm btn-light text-primary">
                    <!-- Smaller button -->
                    <i class="bi bi-person-plus-fill"></i> Add Patient
                </a>
            </div>
       
    

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="table-primary text-white">
                        <tr>
                            <th>Patient Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Appointments</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-dark">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PatientName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td class="text-start">
                                    @if (item.Appointments != null && item.Appointments.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var appointment in item.Appointments)
                                            {
                                                <li>
                                                    <i class="bi bi-calendar-check text-success"></i>
                                                    @appointment.AppointmentDate.ToString("dd MMM yyyy") -
                                                    <span class="text-muted">@appointment.Doctor.Name</span>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-light"><i class="bi bi-x-circle-fill text-warning"></i> No Appointments</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline" title="Details">
                                        <i class="bi bi-card-list"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
    <style>
        .table-primary {
            background-color: #0d6efd !important;
        }

        .bg-primary {
            background-color: #0d6efd !important;
        }

        .btn-light {
            background-color: white;
            border: 1px solid #0d6efd;
        }

        .btn-outline-light {
            border: 1px solid white;
        }

        .text-light {
            color: white;
        }
    </style>