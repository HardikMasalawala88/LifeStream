@model LifeStream.Models.Receptionist

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card card-secondary mt-3">
            <div class="card-header">
                <h3 class="card-title"><i class="fa-solid fa-user-edit"></i> Edit Receptionist</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div class="row">
                            <!-- Left Column -->
                        <div class="col-md-6">
                             <div class="mb-4">
                                <div class="input-group">
                                    @* <label asp-for="Name" class="control-label"></label> *@
                                    <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                                    <input asp-for="FirstName" class="form-control" />
                                </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <div class="input-group">
                                    @* <label asp-for="FirstName" class="control-label"></label> *@
                                    <span class="input-group-text"><i class="fa-regular fa-circle-user"></i></span>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <div class="input-group">
                                    @* <label asp-for="LastName" class="control-label"></label> *@
                                    <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <div class="input-group">
                                    @* <label asp-for="Email" class="control-label"></label> *@
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            
                        </div>
                    </div>
                    <div class="form-group text-center mt-3">
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save"></i> Save</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Back</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
