@model LifeStream.Models.Receptionist

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded p-4">
                <h3>Add New Receptionist</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label" hidden></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId" hidden></select>
            </div>
            <div class="mb-4 mt-4">
                 @* <label asp-for="Name" class="form-label"></label>  *@
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter User Name:" />
                </div>
                     <span asp-validation-for="Name" class="text-danger"></span>
             </div>
             <div class="mb-4">
                @* <label asp-for="FirstName" class="control-label"></label> *@
                 <div class="input-group">
                 <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                <input asp-for="FirstName" class="form-control" placeholder="Enter First Name:" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-4">
              <div class="input-group">
                @* <label asp-for="LastName" class="control-label"></label> *@
                 <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                <input asp-for="LastName" class="form-control" placeholder="Enter Last Name:" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-4">
              <div class="input-group">
                @* <label asp-for="Email" class="control-label"></label> *@
                 <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Enter Email:" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-group">
                <span class="input-group-text bg-primary"><i class="bi bi-plus-square text-light"></i></span>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">    
    <i class="bi bi-arrow-left-short text-primary"></i>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
