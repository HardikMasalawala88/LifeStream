@model LifeStream.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card card-glassmorphism mb-5">
                <div class="card-header bg-gradient-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-comment-medical me-2"></i> Create New Feedback
                        </h3>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>

                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-4">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <!-- Appointment Selection -->
                                <div class="form-floating mb-4">
                                    <select asp-for="AppointmentId" class="form-select" required>
                                        <option value="">-- Select Appointment --</option>
                                        @foreach (var item in ViewBag.AppointmentId)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                    <label asp-for="AppointmentId" class="form-label">
                                        <i class="fas fa-calendar-check me-2 text-primary"></i>Appointment
                                    </label>
                                    <span asp-validation-for="AppointmentId" class="text-danger small"></span>
                                </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <!-- Feedback Date -->
                                <div class="form-floating mb-4">
                                    <input asp-for="FeedbackDate" type="date" class="form-control" placeholder=" " required />
                                    <label asp-for="FeedbackDate" class="form-label">
                                        <i class="fas fa-calendar-day me-2 text-primary"></i>Feedback Date
                                    </label>
                                    <span asp-validation-for="FeedbackDate" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Comment Section -->
                        <div class="form-group mb-4">
                            <label class="form-label">
                                <i class="fas fa-comment-dots me-2 text-primary"></i>Feedback Comment
                            </label>
                            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Enter your feedback here..." required></textarea>
                            <span asp-validation-for="Comment" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center py-3">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-save me-2"></i> Submit Feedback
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-glassmorphism {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .card-glassmorphism:hover {
                box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.25);
            }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }

        .form-floating label {
            padding-left: 2.5rem;
            transition: all 0.3s ease;
        }

        .form-floating .form-control,
        .form-floating .form-select {
            padding-left: 3rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .form-floating .form-control:focus,
            .form-floating .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            }

        .form-floating i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            z-index: 5;
            color: #667eea;
        }

        .btn-outline-primary:hover i {
            color: white;
        }

        textarea.form-control {
            min-height: 120px;
            border-radius: 0.5rem;
            padding: 1rem;
        }

            textarea.form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Form validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}