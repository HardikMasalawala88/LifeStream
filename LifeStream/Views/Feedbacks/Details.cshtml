@model LifeStream.Models.Feedback

@{
    ViewData["Title"] = "Feedback Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="staff-details-card">
                <!-- Header Section -->
                <div class="staff-header">
                    <div class="staff-info">
                        <h1 class="staff-title">Feedback Details</h1>
                        <div class="staff-meta">
                            <span class="role-badge">
                                <i class="bi bi-chat-square-text"></i> Patient Feedback
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Content Section -->
                <div class="staff-content">
                    <div class="row g-4">
                        <!-- Feedback Information -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title">
                                    <i class="bi bi-info-circle text-primary me-2"></i> Feedback Information
                                </h3>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-calendar-date"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Feedback Date</label>
                                            <p>@Model.FeedbackDate.ToString("MMMM dd, yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Comment Section -->
                        <div class="col-12">
                            <div class="info-section">
                                <h3 class="section-title">
                                    <i class="bi bi-chat-left-text text-primary me-2"></i> Patient Comment
                                </h3>
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="bi bi-chat-square-quote"></i>
                                    </div>
                                    <div class="info-content">
                                        <label>Feedback Comment</label>
                                        <p class="feedback-comment">@Model.Comment</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="staff-actions">
                    @if (!User.IsInRole(UserRoleInfo.Admin))
                    {
                        <a asp-action="Edit" asp-route-id="@Model?.FeedbackId" class="btn btn-primary btn-edit">
                            <i class="bi bi-pencil-square me-2"></i> Edit Feedback
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-outline-primary btn-back">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .staff-details-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .staff-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        padding: 2.5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .staff-info {
        flex: 1;
        min-width: 250px;
    }

    .staff-title {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .staff-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
    }

    .role-badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        font-size: 0.95rem;
        backdrop-filter: blur(5px);
    }

        .role-badge i {
            margin-right: 0.5rem;
            color: #ffc107;
        }

    .staff-content {
        padding: 2.5rem;
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.4rem;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 1.25rem;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.1);
        }

    .info-icon {
        width: 40px;
        height: 40px;
        background: rgba(106, 17, 203, 0.1);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.25rem;
        flex-shrink: 0;
    }

        .info-icon i {
            color: #6a11cb;
            font-size: 1.25rem;
        }

    .info-content {
        flex: 1;
    }

        .info-content label {
            display: block;
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 500;
        }

        .info-content p {
            margin: 0;
            font-size: 1.05rem;
            font-weight: 500;
            color: #2c3e50;
        }

    .feedback-comment {
        font-style: italic;
        white-space: pre-wrap;
        line-height: 1.6;
    }

    .staff-actions {
        padding: 1.5rem 2.5rem;
        border-top: 1px solid #f0f0f0;
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        background: #f8f9fa;
    }

    .btn-edit, .btn-back {
        padding: 0.75rem 1.75rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #6a11cb;
        color: white;
        border: none;
    }

        .btn-edit:hover {
            background: #5a0db3;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
        }

    .btn-back {
        background: white;
        color: #6a11cb;
        border: 1px solid #6a11cb;
    }

        .btn-back:hover {
            background: #f9f5ff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.2);
        }

    @@media (max-width: 768px) {
        .staff-header {
            flex-direction: column;
            text-align: center;
            padding: 2rem 1.5rem;
        }

        .staff-meta {
            justify-content: center;
        }

        .staff-content {
            padding: 1.5rem;
        }

        .staff-actions {
            justify-content: center;
            flex-wrap: wrap;
            padding: 1.5rem;
        }

        .btn-edit, .btn-back {
            width: 100%;
            justify-content: center;
        }
    }
</style>