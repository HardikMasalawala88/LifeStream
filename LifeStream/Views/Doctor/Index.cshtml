@model IEnumerable<LifeStream.Models.Doctor>

@{
    ViewData["Title"] = "Doctor List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid pt-1 px-1">
<div class="row g-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
               
                <div class="table-responsive">
<h1>Doctors</h1>


<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-square"></i> Add New Doctor
</a>
</div>

<!-- ✅ Search Form -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchQuery" value="@Context.Request.Query["searchQuery"]" class="form-control" placeholder="Search by Name, Email, or Specialization" />
                            @* <span class="input-group-text bg-primary"><i class="bi bi-search text-light"></i></span> *@
                            <button type="submit" class="btn btn-primary"><i class="bi bi-search text-light"></i></button>
    </div>
</form>

<table class="table table-hover defaul-primary">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Specialization)</th>
            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
            <th>@Html.DisplayNameFor(model => model.First().Age)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().ExprienceYear)</th>
            <th>Doctor Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.ExprienceYear)</td>
                <td>
                    <img src="@Url.Content(item.ImagePath)" alt="Doctor's Image" class="img-fluid rounded" style="max-width: 50px; height: auto;" />
                </td>
                <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId"><i style="color:blue; font-size:small" class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" asp-route-id="@item.UserId"><i style="color:deepskyblue" class="bi bi-card-list"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.UserId"><i style="color:red" class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
</div>
</div>
</div>
</div>

