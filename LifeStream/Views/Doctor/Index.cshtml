@model IEnumerable<LifeStream.Models.Doctor>
@{
    ViewData["Title"] = "Doctor Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --blue: #3f83f8;
        --blue-dark: #1e3a8a;
        --light-gray: #f9fafb;
        --border: #e5e7eb;
    }

    .card-custom {
        border: 1px solid var(--border);
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

        .card-custom .card-header {
            background-color: var(--light-gray);
            border-bottom: 1px solid var(--border);
            padding: 1rem 1.5rem;
            font-size: 1.25rem;
            font-weight: bold;
            color: var(--blue-dark);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

    .table th, .table td {
        vertical-align: middle !important;
    }

    .table thead {
        background-color: var(--blue);
        color: white;
    }

    .table tbody tr:hover {
        background-color: #f1f5ff;
    }

    .img-circle {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        object-fit: cover;
        border: 2px solid var(--blue);
    }

    .badge-custom {
        background-color: var(--blue);
        color: white;
        padding: 0.35em 0.6em;
        border-radius: 5px;
        font-size: 0.85em;
    }

    .btn-sm i {
        pointer-events: none;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: var(--blue);
        border-color: var(--blue-dark);
    }

    .btn-info {
        background-color: #3abaf4;
        border-color: #329ed8;
    }

    .btn-danger {
        background-color: #e3342f;
        border-color: #c9302c;
    }
</style>

<div class="row mt-3">
    <div class="col-12">
        <div class="card card-custom">
            <div class="card-header">
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <span><i class="bi bi-person-badge-fill me-2"></i>Doctor Management</span>
                    <a asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i> Add Doctor
                    </a>
                </div>
            </div>

            <div class="card-body">
                <table id="doctorsTable" class="table table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Specialization</th>
                            <th>Contact</th>
                            <th>Experience</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Url.Content(item.ImagePath ?? "/images/default-doctor.png")" class="img-circle" />
                                </td>
                                <td>
                                    <strong>@item.Name</strong><br />
                                    <small class="text-muted">@item.Gender, @item.Age yrs</small>
                                </td>
                                <td>@item.Specialization</td>
                                <td>
                                    <i class="fas fa-envelope text-primary me-1"></i> @item.Email<br />
                                    <i class="fas fa-phone text-primary me-1"></i> @item.PhoneNumber
                                </td>
                                <td>
                                    <div class="progress mb-1" style="height: 6px;">
                                        <div class="progress-bar bg-primary" style="width: @(Math.Min(item.ExprienceYear * 10, 100))%"></div>
                                    </div>
                                    <span class="badge badge-custom">@item.ExprienceYear Years</span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteDoctorModal" data-userid="@item.UserId" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteDoctorModal" tabindex="-1" aria-labelledby="deleteDoctorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete this doctor record?
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post">
                    <input type="hidden" id="doctorId" name="UserId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#doctorsTable').DataTable({
                responsive: true,
                autoWidth: false,
                columnDefs: [
                    { orderable: false, targets: [0, 5] },
                    { className: "text-center", targets: [0, 5] }
                ],
                language: {
                    paginate: {
                        previous: "<i class='fas fa-chevron-left'></i>",
                        next: "<i class='fas fa-chevron-right'></i>"
                    }
                }
            });

            $('#deleteDoctorModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var userId = button.data('userid');
                $(this).find('#doctorId').val(userId);
                $(this).find('#deleteForm').attr('action', '/Doctor/Delete/' + userId);
            });
        });
    </script>
}
