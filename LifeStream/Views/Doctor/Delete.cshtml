@model LifeStream.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3 mt-4">
            <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                <h2><i class="bi bi-trash3-fill"></i> Delete Doctor</h2>
            </div>
            <div class="card-body p-4 text-center">
                <h4 class="text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this doctor?</h4>
                <hr />

                <div class="row">
                    <div class="col-md-6 offset-md-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="Doctor Image"
                                 class="rounded-circle border border-3 shadow p-1 mb-3"
                                 style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <p class="text-muted"><i class="bi bi-image"></i> No image available</p>
                        }
                    </div>
                </div>

                <dl class="row justify-content-center">
                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-person-fill"></i> Full Name:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-envelope-fill"></i> Email:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-clipboard2-pulse"></i> Specialization:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Specialization)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-gender-ambiguous"></i> Gender:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Gender)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-calendar-check"></i> Age:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Age)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-telephone-fill"></i> Phone Number:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                    <dt class="col-sm-4 text-end fw-bold"><i class="bi bi-briefcase-fill"></i> Experience (Years):</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.ExprienceYear)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="UserId" />

                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
