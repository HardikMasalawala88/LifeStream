@model LifeStream.Models.Doctor

@{
    ViewData["Title"] = "Doctor Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="doctor-profile-card">
                <!-- Profile Header with Circular Image -->
                <div class="profile-header">
                    <div class="profile-image-container">
                        <img src="@Model.ImagePath" alt="Doctor"
                             class="profile-image"
                             onerror="this.src='/images/default-doctor.png'">
                        <div class="verification-badge">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                    </div>
                    <div class="profile-info">
                        <h1 class="doctor-name">@Model.Name</h1>
                        <div class="doctor-meta">
                            <span class="specialty-highlight">
                                <i class="bi bi-award-fill"></i> @Model.Specialization
                            </span>
                            <span class="experience-badge">
                                <i class="bi bi-star-fill"></i> @Model.ExprienceYear Years Experience
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Profile Content -->
                <div class="profile-content">
                    <div class="row g-4">
                        <!-- Personal Information -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title">
                                    <i class="bi bi-person-circle text-primary me-2"></i> Personal Details
                                </h3>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-gender-ambiguous"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Gender</label>
                                            <p>@Model.Gender</p>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-calendar2-plus"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Age</label>
                                            <p>@Model.Age years</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title">
                                    <i class="bi bi-telephone text-primary me-2"></i> Contact Information
                                </h3>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-envelope"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Email</label>
                                            <p class="text-primary">@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-phone"></i>
                                        </div>
                                        <div class="info-content">
                                            <label>Phone</label>
                                            <p>@Model.PhoneNumber</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="profile-actions">
                    <a asp-action="Edit" class="btn btn-primary btn-edit">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </a>
                    <a asp-action="Index" class="btn btn-outline-primary btn-back">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Fields Section (for model binding) -->
<div hidden>
    <input asp-for="FirstName" />
    <input asp-for="LastName" />
</div>

<style>
    .doctor-profile-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2.5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .profile-image-container {
        position: relative;
        width: 150px;
        height: 150px;
        flex-shrink: 0;
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, border 0.3s ease;
    }

        .profile-image:hover {
            transform: scale(1.05);
            border-color: rgba(255, 255, 255, 0.4);
        }

    .verification-badge {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: #28a745;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        border: 2px solid white;
    }

    .profile-info {
        flex: 1;
        min-width: 250px;
    }

    .doctor-name {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .doctor-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
    }

    .specialty-highlight {
        background: white;
        color: #764ba2;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        font-size: 0.95rem;
    }

        .specialty-highlight i {
            margin-right: 0.5rem;
            color: #764ba2;
        }

    .experience-badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        font-size: 0.95rem;
        backdrop-filter: blur(5px);
    }

        .experience-badge i {
            margin-right: 0.5rem;
            color: #ffc107;
        }

    .profile-content {
        padding: 2.5rem;
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.4rem;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 1.25rem;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.1);
        }

    .info-icon {
        width: 40px;
        height: 40px;
        background: rgba(102, 126, 234, 0.1);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.25rem;
        flex-shrink: 0;
    }

        .info-icon i {
            color: #667eea;
            font-size: 1.25rem;
        }

    .info-content {
        flex: 1;
    }

        .info-content label {
            display: block;
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 500;
        }

        .info-content p {
            margin: 0;
            font-size: 1.05rem;
            font-weight: 500;
            color: #2c3e50;
        }

    .profile-actions {
        padding: 1.5rem 2.5rem;
        border-top: 1px solid #f0f0f0;
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        background: #f8f9fa;
    }

    .btn-edit, .btn-back {
        padding: 0.75rem 1.75rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #667eea;
        color: white;
        border: none;
    }

        .btn-edit:hover {
            background: #5a6fcf;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

    .btn-back {
        background: white;
        color: #667eea;
        border: 1px solid #667eea;
    }

        .btn-back:hover {
            background: #f8f9ff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
        }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            text-align: center;
            padding: 2rem 1.5rem;
        }

        .profile-image-container {
            margin-right: 0;
            margin-bottom: 1.5rem;
        }

        .doctor-meta {
            justify-content: center;
        }

        .profile-content {
            padding: 1.5rem;
        }

        .profile-actions {
            justify-content: center;
            flex-wrap: wrap;
            padding: 1.5rem;
        }

        .btn-edit, .btn-back {
            width: 100%;
            justify-content: center;
        }
    }
</style>