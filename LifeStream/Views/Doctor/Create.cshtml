@model LifeStream.Models.DoctorViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded p-4">
                <h3>Insert Doctor Details...</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                                <label asp-for="Doctor.UserId" class="control-label" hidden></label>
                <select asp-for="Doctor.UserId" class="form-control" asp-items="ViewBag.UserId" hidden></select>
            </div>
             <div class="mb-4">
                 @* <label asp-for="Doctor.Name" class="form-label"></label>  *@
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                    <input asp-for="Doctor.Name" class="form-control" placeholder="Enter User Name:" />
                </div>
                     <span asp-validation-for="Doctor.Name" class="text-danger"></span>
             </div>

            <div class="mb-4">
                @* <label asp-for="Doctor.FirstName" class="control-label"></label> *@
                 <div class="input-group">
                 <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                <input asp-for="Doctor.FirstName" class="form-control" placeholder="Enter First Name:" />
                </div>
                <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
            </div>

            <div class="mb-4">
              <div class="input-group">
                @* <label asp-for="Doctor.LastName" class="control-label"></label> *@
                 <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                <input asp-for="Doctor.LastName" class="form-control" placeholder="Enter Last Name:" />
                </div>
                <span asp-validation-for="Doctor.LastName" class="text-danger"></span>
            </div>

            <div class="mb-4">
              <div class="input-group">
                @* <label asp-for="Doctor.Email" class="control-label"></label> *@
                 <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input asp-for="Doctor.Email" class="form-control" placeholder="Enter Email:" />
                </div>
                <span asp-validation-for="Doctor.Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
               @* <label asp-for="Doctor.Specialization" class="control-label"></label> *@
               <div class="input-group">
                 <span class="input-group-text"><i class="bi bi-x-diamond-fill"></i></span>
                   <select asp-for="Doctor.Specialization" class="form-control" asp-items="ViewBag.SpecializationList">
                    <option value="">-- Select Specialization --</option>
                    </select>
              </div>
                  <span asp-validation-for="Doctor.Specialization" class="text-danger"></span>
             </div>



            <div class="mb-4">
              <label asp-for="Doctor.Gender" class="control-label"></label>
            <div class="form-check">
                <input asp-for="Doctor.Gender" type="radio" value="Male" class="form-check-input" id="genderMale" />
               <label class="form-check-label" for="genderMale">
               <i class="bi bi-person-standing"></i> Male
               </label>
                </div>
              <div class="form-check">
               <input asp-for="Doctor.Gender" type="radio" value="Female" class="form-check-input" id="genderFemale" />
                 <label class="form-check-label" for="genderFemale">
                    <i class="bi bi-gender-female"></i>Female
                 </label>
               </div>
               <span asp-validation-for="Doctor.Gender" class="text-danger"></span>
               </div>


            <div class="mb-4">
                    @* <label asp-for="Doctor.Age" class="control-label"></label> *@
                <div class="input-group">
                     <span class="input-group-text"><i class="bi bi-calendar2-plus"></i></span>
                    <input asp-for="Doctor.Age" class="form-control" type="number" min="26" max="60" placeholder="Enter Age:" />
                </div>
                    <span asp-validation-for="Doctor.Age" class="text-danger"></span>
            </div>

            <div class="mb-4">
                    @* <label asp-for="Doctor.PhoneNumber" class="control-label"></label> *@
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                    <input asp-for="Doctor.PhoneNumber" class="form-control" placeholder="Enter Phone Number:" />
                </div>
                    <span asp-validation-for="Doctor.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-4">
                    @* <label asp-for="Doctor.ExprienceYear" class="control-label"></label> *@
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                    <input asp-for="Doctor.ExprienceYear" class="form-control" type="number" min="1" max="35" placeholder="Enter Experience Year:" />
                </div>
                    <span asp-validation-for="Doctor.ExprienceYear" class="text-danger"></span>
            </div>

            <!-- ✅ File Upload Control -->
            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="ImageFile" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-file-earmark"></i></span>
                    <input type="file" asp-for="ImageFile" name="ImageFile" class="form-control" />
                </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                <span class="input-group-text bg-primary"><i class="bi bi-plus-square text-light"></i></span>
                <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <i class="bi bi-arrow-left-short text-primary"></i>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
