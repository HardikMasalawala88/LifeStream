@model LifeStream.Models.Doctor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded p-4">

<h3>Edit Doctor Details...</h3>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="ImagePath" />

            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="Name" class="control-label"></label> *@
                     <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="Name" class="form-control" />
                </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="FirstName" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="LastName" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                    <input asp-for="LastName" class="form-control" />
                </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="Email" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" />
                </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="Specialization" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-x-diamond-fill"></i></span>
                    <select asp-for="Specialization" class="form-control" asp-items="ViewBag.SpecializationList">
                        <option value="">-- Select Specialization --</option>
                    </select>
                </div>
                    <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Gender" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Gender" type="radio" value="Male" class="form-check-input" id="genderMale" />
                    <label class="form-check-label" for="genderMale">
                       <i class="bi bi-person-arms-up"></i> Male
                    </label>
                </div>
                <div class="form-check">
                  <input asp-for="Gender" type="radio" value="Female" class="form-check-input" id="genderFemale" />
                    <label class="form-check-label" for="genderFemale">
                       Female
                    </label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>


            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="Age" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-calendar2-plus"></i></span>
                    <input asp-for="Age" class="form-control" type="number" min="26" max="60" />
                </div>
                    <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    @* <label asp-for="PhoneNumber" class="control-label"></label> *@
                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                    @* <label asp-for="ExprienceYear" class="control-label"></label> *@
                    <input asp-for="ExprienceYear" class="form-control" type="number" min="1" max="35" />
                </div>
                    <span asp-validation-for="ExprienceYear" class="text-danger"></span>
            </div>

            <!-- ✅ Current Image Display -->
            <div class="form-group">
    <label>Current Image:</label><br />
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
          <img src="@Model.ImagePath" alt="Current Image" width="150" height="150" style="border: 1px solid black; padding: 5px; border-radius:8px;"/>         
    }
    else
    {
        <p>No image available</p>
    }
</div>


            <!-- ✅ File Upload Control -->
            <div class="mb-4 mt-4">
                <div class="input-group">
                    @* <label>Upload New Image:</label> *@
                    <span class="input-group-text"><i class="bi bi-file-earmark"></i></span>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                    <small class="text-muted">Leave blank if you don't want to change the image.</small>
            </div>

            <div class="mb-4">
                <div class="input-group">
                     <span class="input-group-text bg-primary"><i class="bi bi-box-arrow-down text-light"></i></span>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <i class="bi bi-arrow-left-short text-primary"></i>
    <a asp-action="Index">Back to List</a>
</div>
</div>
    </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
